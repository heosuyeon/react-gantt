{
  "name": "react-gantt-hybrid",
  "version": "1.0.0",
  "description": "Hybrid application with Node.js EJS and React SPA",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"vite build --watch\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:watch": "concurrently \"npm run dev:server\" \"vite build --watch\"",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "vite build",
    "start": "node dist/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "gantt-task-react": "^0.3.9"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.1.0",
    "http-proxy-middleware": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.1"
  }
}
